@page
@model NEW_PROJECT.Pages.Players.ViewModel
@{
}
<h1>:: View Player Page ::</h1>
<br />
<br />

<div>
    <p>Select Level : </p>
    <form>
        <select type="text" asp-for="Level" style="width: 50px;">
            <option>All</option>
            @foreach (var item in Model.LevelItems)
            {
<option>@item</option>}
        </select>

        <input type="submit" value="Filter" />
    </form>
</div>
<br />

<div>
    <table class="table table-active">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.PlayerRec[0].PlayerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerRec[0].PlayerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerRec[0].PlayerLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerRec[0].PlayerCourse)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>


        @for (int i = 0; i < Model.PlayerRec.Count; i++)
        {
<tr>
    <td>@Model.PlayerRec[i].PlayerID</td>
    <td>@Model.PlayerRec[i].PlayerName</td>
    <td>@Model.PlayerRec[i].PlayerLevel</td>
    <td>@Model.PlayerRec[i].PlayerCourse</td>
    <td>
        <a asp-page="/Players/Update" asp-route-id="@Model.PlayerRec[i].Id">Update</a>
        <a asp-page="/Players/Delete" asp-route-id="@Model.PlayerRec[i].Id">Delete</a>
    </td>
</tr>}
    </table>
</div>